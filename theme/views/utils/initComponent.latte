{default $name = null}
{default $place = null}
{default $data = null}
{php if(!$name) throw new \Exception("Front-end component is missing a name.")}
{default $component = [ name => $name, data => $data, place => $place ]}
{default $handler = initComponents}

<script n:syntax="double">
	;(function(){
		(window.{{$handler|noescape}} = window.{{$handler|noescape}} || []).push({{$component}})
	})();
</script>
